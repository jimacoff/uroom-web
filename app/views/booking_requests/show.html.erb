<div id="page-content">
  <div class="container page">
    <header><h1>Booking Request</h1></header>
    <div class="col-md-12">
      <!-- Tenants -->
      <div class="col-md-6">
        <% @users.each do |user| %>
          <div class="col-md-12 form-border">
            <div class="col-md-3">
              <%= image_tag user.avatar.url(:medium), class: "image" %>
            </div>
            <div class="col-md-6">
              <h4><%= user.full_name %></h4>
              <p><%= user.about %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Listing -->
      <div class="col-md-6">
        <div class="col-md-12 form-border">
          <h3 style="margin-top: 0px; margin-bottom: 5px;"><%= @listing.title %></h2>
            <div class="col-md-3">
              <%= image_tag @listing.pictures.first.image.url(:medium), class: "image" if @listing.pictures.any? %>
            </div>
            <div class="col-md-9">
              <ul>
                <li><strong>Start Date:</strong> <%= @start_date.to_formatted_s(:long) %></li>
                <li><strong>End Date:</strong> <%= @end_date.to_formatted_s(:long) %></li>
              </ul>
            </div>
            <div class="col-md-12" style="margin-top: 10px;">
              <div class="col-md-6">
                <%= button_to "Accept", bookingrequests_accept_path(id: @request), method: :post, class: "btn btn-default", style: "width: 100%;" %>
              </div>
              <div class="col-md-6">
                <%= button_to "Reject", bookingrequests_reject_path(id: @request), method: :post, class: "btn btn-default", style: "width: 100%;" %>
              </div>
            </div>
        </div>
      </div>
    </div>

  </div>
</div>
