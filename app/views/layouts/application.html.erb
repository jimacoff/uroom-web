<!DOCTYPE html>
<html>
<head>
  <title>Roomie</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,700' rel='stylesheet' type='text/css'>
</head>
  <body class="page-homepage navigation-fixed-top page-slider horizontal-search" id="page-top" data-spy="scroll" data-target=".navigation" data-offset="90">
  <!-- Wrapper -->
  <div class="wrapper">

      <div class="navigation">

          <div class="container">
              <header class="navbar" id="top" role="banner">
                  <div class="navbar-header">
                      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                          <span class="sr-only">Toggle navigation</span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                      </button>
                      <div class="navbar-brand nav" id="brand">
                          <%= link_to image_tag("logo_sticky.png", width: 160, height: 34, data: { src: "logo_sticky.png", src_retina: "logo_sticky@2x.png" }), root_path %>
                      </div>
                  </div>
                  <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                      <ul class="nav navbar-nav">
                        <% if user_signed_in? %>
                        <li class="has-child"> <%= current_user.first_name %>
                            <ul class="child-navigation">
                                <li><%= link_to "Dashboard", dashboard_path %></li>
                                <li><%= link_to "Account Settings", edit_user_registration_path %></li>
                                <li><%= link_to "Sign out", destroy_user_session_path, method: 'delete' %></li>
                            </ul>
                        </li>
                        <% else %>
                        <li>
                          <ul>
                            <%= render 'users/shared/login_dropdown' %>
                        </ul>
                        </li>
                        <% end %>
                      </ul>
                  </nav><!-- /.navbar collapse-->
                  <div class="add-your-property">
                    <%= link_to new_listing_path, class: "btn btn-default" do %>
                      <i class="fa fa-plus"></i><span class="text">Add Your Property</span></a>
                    <% end %>
                  </div>
              </header><!-- /.navbar -->
          </div><!-- /.container -->
      </div><!-- /.navigation -->
      <% flash.each do |message_type, message| %>
        <div class="flash-head alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

        <%= yield %>







      <!-- Page Footer -->
      <footer id="page-footer">
          <div class="inner">
              <aside id="footer-thumbnails" class="footer-thumbnails"></aside><!-- /#footer-thumbnails -->
              <% if Rails.env.development? %>
                <aside id="footer-main">
                  <%= debug(params) %>
                </aside><!-- /#footer-main -->
              <% end %>
              <aside id="footer-copyright">
                  <div class="container">
                      <span>Copyright Roomie App, Inc, Â© 2015. All Rights Reserved.</span>
                      <span class="pull-right">Need help?     hello@roomieapp.io</span>
                  </div>
              </aside>
          </div><!-- /.inner -->
      </footer>
      <!-- end Page Footer -->
  </div>

  <div id="overlay"></div>
  </body>
</html>
