    <div class="container">
      <h1 id="title">Partner up. Discover.</h1>
      <div id="search" class="row">
        <h4>Find Listings</h4>
        <%= form_tag({controller: "search", action: "results"}, method: "get") do %>
          <div class="col-sm-3">
                <%= select_tag :location, options_for_select(search_options, selected: :location), data: { icon: 'glyphicon-heart' } %>
          </div>
          <div class="col-sm-3">
                <%= select_tag("date", options_for_select(@months, @date)) %>
          </div>
          <div class="col-sm-2">
                <%= select_tag :lease_length, options_for_select([["Lease Length", ''], ['3 Months', 3], ['6 Months', 6], ['9 Months', 9], ['12 Months', 12]], selected: :lease_length, class: "", name: "category" ) %>
          </div>
          <div class="col-sm-2">
            <div class="input-group">
                <span class="input-group-addon">$</span>
                <%= text_field_tag(:max, nil, {placeholder: "Max Rent", class: "form-control"}) %>
            </div>
          </div>
          <div class="col-sm-2 search">
                <%= submit_tag "Search", { class:"btn btn-default" } %>
          </div>
        <% end %>
      </div>
    </div>
</div>



    <!-- end Search Box -->

    <!-- Page Content -->
    <div id="page-content">
        <section id="our-services" class="block">
            <div class="container">
                <header class=""><h2>How it Works</h2></header>
                <div class="row">
                    <div class="col-md-4 col-sm-4">
                        <div class="">
                            <figure class="icon"><i class="fa fa-folder"></i></figure>
                            <aside class="">
