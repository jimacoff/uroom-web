<div class="col-md-6 col-sm-6">
    <div class="property">
        <%= link_to listing_path(id: listing.id, start_date: start_date, lease_length: lease_length)  do %>
          <div class="property-image property-container" style="width: 262px;
          height: 262px;
          display: block;
          position: relative;
          overflow: hidden;">
          <% if listing.pictures.any? %>
              <%= image_tag listing.pictures.first.image.url(:medium), class: "listing-image", id: "image"%>
          <% end %>
          </div>
            <div class="overlay">
                <div class="info">
                    <div class="tag price" style="float: right;">$ <%= listing.price %></div>
                    <h3><%= listing.title %></h3>
                </div>
                <ul class="additional-info">
                    <li>
                        <header>Furnished:</header>
                        <figure><%= listing.furnished ? "Yes" : "No" %></figure>
                    </li>
                    <li>
                        <header>Beds:</header>
                        <figure><%= listing.bedrooms %></figure>
                    </li>
                    <li>
                        <header>Baths:</header>
                        <figure><%= listing.bathrooms %></figure>
                    </li>
                    <li>
                        <header>Followers:</header>
                        <figure><%= listing.users.count %></figure>
                    </li>
                </ul>
            </div>
        <% end %>
    </div><!-- /.property -->
</div><!-- /.col-md-3 -->
