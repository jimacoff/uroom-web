<div class="selected-block" style="margin-top: 10px;">
  <div class="selected-users">
      <% crew.users.each do |user| %>
        <div class="profile-whole">
          <div class=" member-item" style="background-image: url(<%= user.avatar.url(:medium) %>);" id="<%= user.id %>"></div>
          <section class="profile-block">
            <h3>
              <%= link_to user.full_name, show_profile_path(user.id) %>
            </h3>
            <p>
              <%= user.about %>
            </p>
          </section>
        </div>
      <% end %>
  </div>
</div>


<script type="text/javascript">
   $(document).ready(function(){
     $('.your-class').slick({
       slidesToShow: 3,
       draggable: false,
       infinite: false,
       variableWidth: true,
     });
   });
 </script>
