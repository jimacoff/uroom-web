<h1>Create a new listing</h1>

    <%= form_for(@listing) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control' %>

      <%= f.label :accommodates %>
      <%= f.number_field :accommodates, class: 'form-control' %>

      <%= f.label :bedrooms %>
      <%= f.number_field :bedrooms, class: 'form-control' %>

      <%= f.label :bathrooms %>
      <%= f.number_field :bathrooms, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :address_2 %>
      <%= f.text_field :address_2, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>

      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>

      <%= f.label :zipcode %>
      <%= f.number_field :zipcode, class: 'form-control' %>

      <%= f.submit "Create Listing", class: "btn btn-primary" %>

    <% end %>
