<div class="dropdown dropdown-access">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="access_link">Sign in</a>
    <div class="dropdown-menu">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control", id: "inputUsernameEmail", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password" %>
          </div>
          <a id="forgot_pw" href="#">Forgot password?</a>
          <div class=row>
          <%= f.submit "Sign in", class: "btn btn-default btn-drop", id: "Sign_in", style: "background-color: #51bce6;" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-drop-other", style: "background-color: white; color: #51bce6; font-size: 12px; border: 2px solid #51bce6; padding-top: 13px;", id: "Sign_up" %>
        </div>
        <% end %>
    </div>
</div><!-- End Dropdown access -->
