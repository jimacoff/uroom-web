<div class="dropdown dropdown-access">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="access_link" style="color: black;">Sign in</a>
    <div class="dropdown-menu">
        <% "Facebook Login" %>
        <div class="login-or">
            <hr class="hr-or">
            <span class="span-or">or</span>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control", id: "inputUsernameEmail", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password" %>
          </div>
          <a id="forgot_pw" href="#">Forgot password?</a>
          <%= f.submit "Sign in", class: "button_drop", id: "Sign_in" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "button_drop outline", id: "Sign_up" %>
        <% end %>
    </div>
</div><!-- End Dropdown access -->
